<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
    <h1 class="text-center my-4">All Restaurants</h1>
    <div>
        <button type="button" class="btn btn-outline-dark mb-3 d-grid gap-2 col-6 mx-auto" href="/restaurants/new">Add New Restaurant</button>
    </div>
    <% for (let restaurant of restaurants){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%  if(restaurant.images.length) { %> 
                    <img class="img-fluid" alt="" src="<%= restaurant.images[0].url %>">
                    <% } else { %> 
                        <img class="img-fluid" alt="no-images" src="https://res.cloudinary.com/dhqcigh6c/image/upload/v1609507204/YelpProject/unnamed_fex1yn.png">
                    <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= restaurant.name %>
                        </h5>
                        <p class="card-text">
                            <%= restaurant.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= restaurant.location %>
                            </small>
                        </p>
                        <a class="btn btn-outline-primary" href="/restaurants/<%= restaurant._id %> "><i
                                class="far fa-eye"></i> View <%= restaurant.name %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const restaurants = {features: <%- JSON.stringify(restaurants) %>}
    </script>
    <script src="/javascript/clusterMap.js"></script>